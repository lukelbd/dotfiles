#!/bin/bash
# shellcheck disable=2076
################################################################################
# setup
# Create symlinks from $HOME to the committed files in $HOME/dotfiles
################################################################################
# Files to be ignored
exclude=(.gitignore README.md setup cleanup originals)

# Setup
root="$HOME"
dotfiles="$HOME/dotfiles"
cd "$dotfiles" || {
  echo "Error: dotfiles repo should be cloned into \$HOME."
  exit 1
}
read -r -a files < <(git ls-tree --name-only master | xargs)
storage="$dotfiles/originals"
[ -d "$storage" ] || mkdir "$storage"

# Move existing stuff to storage, then create symlinks
for file in "${files[@]}"; do  # iterate through files
  if ! [[ " ${exclude[*]} " =~ " $file " ]]; then
    echo "Creating symlink to $file in $HOME/..."
    if [ -L "$root/$file" ]; then
      echo "Removing existing symlink $root/$file..."
      rm "$root/$file"  # remove if symlink
    elif [ -r "$root/$file" ]; then
      echo "Moving existing $file file to $storage..."
      if [ -e "$storage/$file" ]; then
        echo "Warning: Removing existing backup $storage/$file..."
        rm -r "$storage/$file"
      fi
      mv "$root/$file" "$storage/"  # copy if not
    fi
    ln -s "$dotfiles/$file" "$root/$file"
  fi
done
