{
    "LanguageServerManager": {
        "language_servers": {
            "pylsp": {
                "display_name": "python-language-server",
                "languages": [
                    "python"
                ],
                "mime_types": [
                    "text/python",
                    "text/x-ipython"
                ],
                "serverSettings": {
                    "pylsp.plugins.autopep8.enabled": false,
                    "pylsp.plugins.flake8.enabled": true,
                    "pylsp.plugins.mccabe.enabled": false,
                    "pylsp.plugins.pycodestyle.enabled": false,
                    "pylsp.plugins.pydocstyle.enabled": false,
                    "pylsp.plugins.pyflakes.enabled": false,
                    "pylsp.plugins.pylint.enabled": false,
                    "pylsp.plugins.rope.enabled": true,
                    "pylsp.plugins.yapf.enabled": false,
                    "pylsp.plugins.flake8.ignore": ["W503", "E402", "E731", "E741"],
                    "pylsp.plugins.flake8.maxLineLength": 88
                }
            }
        }
    }
}
