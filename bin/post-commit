#!/usr/bin/env bash
#-----------------------------------------------------------------------------#
# Post commit hook that looks for __version__ variable in __init__.py
# file, compares it to the current tag, and updates the commit if the
# __version__ was also updated. Copy to .git/hooks/post-commit to add this
# to any project.
#-----------------------------------------------------------------------------#
# Adds a new tag if current tag does not match
tag=$(git describe --tags)
[ $? -ne 0 ] && echo "Error: Could not get tag." && exit 1
prevdir=$(git rev-parse)
