#!/usr/bin/env bash
# Function to wait for 3 *idle* seconds, until
# Other flags will be passed to command
local args=("$@")
local input=""
read "${args[@]}" -t 3 -N 1 char
while [ -n "$char" ] && [ "$char" != $'\n' ]; do
  input+=$char
  read -t 3 -N 1 char
done
echo "$input" # a bit different, *echo* instead of implicitly setting
