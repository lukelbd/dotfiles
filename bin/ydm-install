#!/usr/bin/env bash
# Install and initialize
dir="${0%/*}"
config="$dir/.config"
pip install -r "$dir/requirements.txt"
if ! [ -r "$config" ]; then
  cat > "$config" <<EOF
mp3 = FALSE
directory = MUSIC_FOLDER
token = DISCOGS_TOKEN
username = MUSICBRAINZ_USERNAME
password = MUSICBRAINZ_PASSWORD
EOF
  echo "Created default configuration file '$config'."
fi
